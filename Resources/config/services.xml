<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="symfony_cmf_core.file_helper" class="Symfony\Cmf\Bundle\CoreBundle\Helper\RepositoryFileHelper">
            <argument>%symfony_cmf_core.content_basepath%</argument>
            <argument>%symfony_cmf_core.filestore_basepath%</argument>
            <argument>%symfony_cmf_core.filestore_relative_basepath%</argument>
        </service>

        <service id="symfony_cmf_core.twig.children_extension" class="Symfony\Cmf\Bundle\CoreBundle\Twig\TwigExtension">
            <!-- TODO make configurable -->
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <argument type="service" id="symfony_cmf_content.publish_workflow_checker"/>
            <tag name="twig.extension"/>
        </service>

        <service id="symfony_cmf_content.publish_workflow_checker" class="Symfony\Cmf\Bundle\CoreBundle\PublishWorkflow\PublishWorkflowChecker">
            <argument>%symfony_cmf_core.role%</argument>
            <argument type="service" id="security.context" on-invalid="ignore"/>
        </service>

    </services>
</container>
